<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Confirm Details"
            android:textColor="@color/white"
            android:textStyle = "bold"
            android:layout_marginTop="16dp"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#38ffffff"
            android:hint="Category"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="#808080"
            android:singleLine="true"
            android:maxLength="254"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#38ffffff"
            android:hint="Description"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="#808080"
            android:singleLine="true"
            android:maxLength="254"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date, Total Price, Payment Method"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="#38ffffff"
                android:hint="Date"
                android:padding="16dp"
                android:textColor="@color/white"
                android:textColorHint="#808080"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:maxLength="254"/>
            <EditText
                android:id="@+id/total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:background="#38ffffff"
                android:hint="Total Price"
                android:padding="16dp"
                android:textColor="@color/white"
                android:textColorHint="#808080"
                android:singleLine="true"
                android:maxLength="254"/>
            <EditText
                android:id="@+id/payment_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:background="#38ffffff"
                android:hint="Payment"
                android:padding="16dp"
                android:textColor="@color/white"
                android:textColorHint="#808080"
                android:singleLine="true"
                android:maxLength="254"/>
        </LinearLayout>
        <Button
            android:id="@+id/save_receipt_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Save"
            android:padding="16dp"
            android:backgroundTint="@color/purple_onepop" />


    </LinearLayout>

</ScrollView>